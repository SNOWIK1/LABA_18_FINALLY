<Page x:Class="FINALLY_18_LABA.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FINALLY_18_LABA"
      mc:Ignorable="d" 
      WindowHeight="450" WindowWidth="800"
      Title="Main">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListView Grid.Column="0" x:Name="navigation" SelectionChanged="selected"/>
        <Button Grid.Column="1" Content="Add new game" Padding="5" FontSize="14"/>
    </Grid>
</Page>
