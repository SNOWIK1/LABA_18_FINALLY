<Page x:Class="FINALLY_18_LABA.Module"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FINALLY_18_LABA"
      mc:Ignorable="d" 
      WindowHeight="200" WindowWidth="300"
      Title="About">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap">
                We are glad to see you in our app store! We hope you're enjoying
                available games!
            </TextBlock>
            <Button Content="Go back" Click="go_back" Style="{StaticResource btn_style}"/>
        </StackPanel>
    </Grid>
</Page>
